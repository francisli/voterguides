<!DOCTYPE html>
<html>
  <head>
    <% if content_for?(:head) %><%= yield :head %><% end %>
    <title><%= t ".sf_voter_guides" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/"><%= t ".sf_voter_guides" %></a>
      <ul class="navbar-nav px-3">
        <% if user_signed_in? %>
          <li class="nav-item text-nowrap">
            <%= link_to t(".admin"), admin_path, class: "nav-link" %>
          </li>
          <li class="nav-item text-nowrap ml-3">
            <%= link_to t(".sign_out"), destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item text-nowrap">
            <%= link_to t(".sign_up"), new_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item text-nowrap ml-3">
            <%= link_to t(".sign_in"), new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>

    <div class="container-fluid">
